<Project Sdk="Microsoft.NET.Sdk">

	<PropertyGroup>
		<TargetFramework>netstandard2.1</TargetFramework>
		<Nullable>enable</Nullable>
		<RootNamespace>Taviloglu.EnvGuard</RootNamespace>
		<GeneratePackageOnBuild>true</GeneratePackageOnBuild>
		<PackageId>Taviloglu.EnvGuard</PackageId>
		<Version>1.0.0</Version>
		<Authors>Sinan TAVILOGLU</Authors>
		<PackageDescription>Fail-fast environment variable loader and validator for .NET applications.</PackageDescription>				
		<RepositoryUrl>https://github.com/staviloglu/Taviloglu.EnvGuard</RepositoryUrl>
		<PackageProjectUrl>https://github.com/staviloglu/Taviloglu.EnvGuard</PackageProjectUrl>
		<PackageLicenseExpression>MIT</PackageLicenseExpression>
		<PackageTags>environment variables configuration validation failfast</PackageTags>
		<RepositoryType>git</RepositoryType>
		<Copyright>Copyright (c) 2025 SINAN TAVILOGLU</Copyright>
	</PropertyGroup>

</Project>
